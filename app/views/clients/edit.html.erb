<section class="border-b border-slate-100 bg-white">
  <div class="mx-auto max-w-7xl flex flex-col gap-2 px-6 py-6 lg:px-8">
    <p class="text-[0.65rem] uppercase tracking-[0.35em] text-slate-500/80">Update client</p>
    <h1 class="text-2xl font-semibold text-slate-900">Client profile</h1>
    <p class="text-xs uppercase tracking-[0.3em] text-slate-500/75">Keep every data point current so teams always know who to contact.</p>
  </div>
</section>

<section class="border-b border-slate-100 bg-white">
  <div class="mx-auto max-w-7xl px-6 py-8 lg:px-8">
    <%= render "form", client: @client %>
  </div>
</section>

<section class="bg-white">
  <div class="mx-auto max-w-7xl px-6 py-6 text-[0.65rem] font-semibold uppercase tracking-[0.3em] text-slate-500/80 lg:px-8">
    <%= link_to "← View client profile", @client, class: "inline-block hover:text-blue-700" %>
    <span class="mx-3 text-slate-300/70">|</span>
    <%= link_to "Back to directory →", clients_path, class: "inline-block hover:text-blue-700" %>
  </div>
</section>
