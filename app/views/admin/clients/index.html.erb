<% assigned_count = @clients.count { |client| client.user_id.present? } %>
<% unassigned_count = @clients.size - assigned_count %>

<section class="border-b border-slate-100 bg-white">
  <div class="mx-auto max-w-7xl flex flex-col gap-4 px-6 pb-4 pt-6 lg:flex-row lg:items-center lg:justify-between lg:px-8">
    <div>
      <p class="text-[0.65rem] uppercase tracking-[0.35em] text-slate-500/80">Client insight</p>
      <h1 class="text-2xl font-semibold text-slate-900">Client intelligence</h1>
      <p class="mt-1 text-xs uppercase tracking-[0.3em] text-slate-500/75">Track relationships, assignments, and contact health in real time.</p>
    </div>
    <%= link_to "New client",
          new_admin_client_path,
          class: "inline-flex items-center gap-2 rounded-full bg-gradient-to-r from-brand-500 to-brand-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:from-brand-600 hover:to-brand-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-indigo-600" %>
  </div>

  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <% tabs = [
      ["Overview", "#overview"],
      ["Activity", "#activity"],
      ["Accounts", "#accounts"],
      ["Documents", "#documents"]
    ] %>
    <nav class="flex h-12 items-center gap-8 border-b border-slate-200/70 text-sm">
      <% tabs.each_with_index do |(label, anchor), idx| %>
        <a href="<%= anchor %>" class="inline-flex h-full items-center border-b-2 px-1 text-sm transition <%= idx.zero? ? 'border-slate-900 font-medium text-slate-900' : 'border-transparent text-slate-600 hover:text-slate-900' %>"><%= label %></a>
      <% end %>
    </nav>
  </div>
  <div class="mx-auto max-w-7xl space-y-10 px-6 pb-8 pt-6 lg:px-8">
    <section id="overview" class="space-y-6">
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
        <div class="relative overflow-hidden rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-indigo-50/70 to-transparent"></div>
          <div class="relative">
            <p class="text-sm text-slate-500">Total organizations</p>
            <p class="mt-1 text-3xl font-semibold tabular-nums text-slate-900"><%= @clients.size %></p>
            <p class="mt-1 text-xs text-slate-500">Across your current portfolio</p>
          </div>
        </div>
        <div class="relative overflow-hidden rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-emerald-50/70 to-transparent"></div>
          <div class="relative">
            <p class="text-sm text-slate-500">Assigned accounts</p>
            <p class="mt-1 text-3xl font-semibold tabular-nums text-slate-900"><%= assigned_count %></p>
            <p class="mt-1 text-xs text-emerald-600">+100% linked owners</p>
          </div>
        </div>
        <div class="relative overflow-hidden rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-rose-50/70 to-transparent"></div>
          <div class="relative">
            <p class="text-sm text-slate-500">Unassigned</p>
            <p class="mt-1 text-3xl font-semibold tabular-nums text-slate-900"><%= unassigned_count %></p>
            <p class="mt-1 text-xs text-rose-600">Needs attention</p>
          </div>
        </div>
        <div class="relative overflow-hidden rounded-xl border border-slate-200 bg-white p-6 shadow-sm">
          <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-indigo-50/70 to-transparent"></div>
          <div class="relative">
            <p class="text-sm text-slate-500">Avg. response</p>
            <p class="mt-1 text-3xl font-semibold tabular-nums text-slate-900">3.4h</p>
            <p class="mt-1 text-xs text-emerald-600">-12% vs last week</p>
          </div>
        </div>
      </div>
    </section>

    <section id="activity" class="space-y-4">
      <div class="flex items-center justify-between">
        <h2 class="text-sm font-semibold text-slate-700">Recent activity</h2>
        <%= link_to "View all", "#", class: "text-sm font-medium text-indigo-600 hover:text-indigo-700" %>
      </div>
      <div class="divide-y divide-slate-100">
        <% if @clients.present? %>
          <% @clients.each do |client| %>
            <div class="flex items-center gap-6 px-0 py-4 lg:px-0">
              <div class="min-w-[200px] flex items-center gap-3">
                <span class="inline-flex size-8 items-center justify-center rounded-lg bg-indigo-50 text-indigo-600 font-medium"><%= client.company_name.first.upcase %></span>
                <div>
                  <p class="text-sm font-medium text-slate-900"><%= client.company_name %></p>
                  <p class="text-xs text-slate-500"><%= client.contact_email %></p>
                </div>
              </div>
              <div class="min-w-0 grow text-sm text-slate-600">
                <p>Assigned owner: <span class="font-medium text-slate-900"><%= client.user&.email || "Unassigned" %></span></p>
              </div>
              <div class="text-right text-sm text-indigo-600 hover:text-indigo-700">
                <%= link_to "View", [:admin, client] %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="rounded-xl border border-slate-200 bg-white p-8 text-center">
            <p class="text-sm text-slate-600">No activity yet. Once clients are added you will see them here.</p>
          </div>
        <% end %>
      </div>
    </section>

    <section id="accounts" class="space-y-4">
      <div class="flex items-center justify-between">
        <h2 class="text-sm font-semibold text-slate-700">Accounts</h2>
        <%= link_to "Manage", "#", class: "text-sm font-medium text-indigo-600 hover:text-indigo-700" %>
      </div>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <% @clients.first(3).each do |client| %>
          <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
            <div class="flex items-center gap-3">
              <span class="inline-flex size-8 items-center justify-center rounded-lg bg-slate-100 text-slate-600 font-semibold"><%= client.company_name.first.upcase %></span>
              <div>
                <p class="text-sm font-medium text-slate-900"><%= client.company_name %></p>
                <p class="text-xs text-slate-500">Account</p>
              </div>
            </div>
            <div class="mt-4 flex items-center justify-between text-xs text-slate-500">
              <span><%= client.user&.email || "No owner" %></span>
              <%= link_to "Details", [:admin, client], class: "text-indigo-600 hover:text-indigo-700" %>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <section id="documents" class="space-y-4">
      <div class="flex items-center justify-between">
        <h2 class="text-sm font-semibold text-slate-700">Documents</h2>
        <button type="button" class="inline-flex items-center gap-2 rounded-lg border border-slate-200 bg-white px-3 py-2 text-sm text-slate-600 hover:bg-slate-50">Upload file</button>
      </div>
      <div class="rounded-xl border border-slate-200 bg-white p-6 text-sm text-slate-600">
        No documents uploaded yet.
      </div>
    </section>
  </div>
</section>
